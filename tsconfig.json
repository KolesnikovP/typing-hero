{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    // esModuleInterop позволяет работать с импортами которые исп common js(require()) как с обычными пакетами с помощью import
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // для абсолютного импорта
    "baseUrl": ".",
    "paths" : {
      "*": ["./src/*"]
    },
    // все экспорты и импорты абсолютные будут идти из папки src
    "experimentalDecorators": true
  },
  "lib": [
    "dom",
    "es5",
    "ES2015",
    "scripthost",
    "es2015.promise"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./config/jest/setupTests.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
